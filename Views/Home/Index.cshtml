@{
    ViewData["Title"] = "Home Page";
}
<h2>Bienvenidos</h2>

@model tl2_tp10_2023_Santialru.ViewModels.LoginViewModel

<form asp-controller="Home" asp-action="Login" method="post">
    <div class="mb-3">
        <label asp-for="@Model.NombreDeUsuario"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
        <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>    
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" type="password" class="form-control" />
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }